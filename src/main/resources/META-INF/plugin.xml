<idea-plugin>

    <!-- Unique id for this plugin. Must stay constant for the life of the plugin. -->
    <id>com.thftgr.redis</id>

    <!-- Text to display as name on Preferences/Settings | Plugin page -->
    <name>SDK: Tool Window Sample</name>

    <!-- Indicate this plugin can be loaded in all IntelliJ Platform-based products. -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Text to display as description on Preferences/Settings | Plugin page -->
    <description>
        <![CDATA[
      thftgr's intellij redis plugin
      thftgr's intellij redis plugin
    ]]>
    </description>
    <change-notes>
        <![CDATA[
      <ul>

      </ul>
    ]]>
    </change-notes>

    <vendor url="https://github.com/thftgr">thftgr</vendor>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="REDIS" anchor="right" factoryClass="com.thftgr.redis.RedisTab"/>
    </extensions>

</idea-plugin>
